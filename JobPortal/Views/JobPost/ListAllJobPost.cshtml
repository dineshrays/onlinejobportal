@model  JobPortal.ViewModel.ListOfJobPost
@{
    ViewBag.Title = "ListAllJobPost";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}
<h2>JobPost</h2>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>

<table>
    @foreach (var item in Model.JobPost)
    {
    <tbody class="card">
        @*<div class="container">
        <div class="card">
            <div class="card-body">*@

        <tr>
            <td>

                <a href="@Url.Action("ListOfJobPost", "Jobpost", new { id = @item.Id })">@item.JobTittle</a>
                @*@Html.DisplayFor(ModelItem => item.JobTittle)*@
                <br />

                @Html.DisplayFor(ModelItem => item.ExpFrom)-@Html.DisplayFor(ModelItem => item.ExpTo)

                &nbsp;&nbsp;

                @foreach (var locitem in Model.city)
                {
                    if (locitem.JobPostId == item.Id)
                    {
                        @*<td>*@
                        <i class="menu-icon mdi mdi-account-location"></i>
                        @Html.DisplayFor(ModelItem => locitem.CityName)
                        @Html.Label("/")
                        //</td>
                    }
                }

            </td>

        </tr>

        <tr>

            <td>

                <label style="color:dimgrey">KeySkill:</label>
                @*</td>*@
                @foreach (var Skillitem in Model.jobPostSkill)
                {
                    if (Skillitem.JobPostId == item.Id)
                    {
                        @*<td>*@
                        @Html.DisplayFor(ModelItem => Skillitem.SkillName)
                        @Html.Label("/")
                        //</td>
                    }

                }

            </td>

        </tr>
        <tr>

            <td>

                <label style="color:dimgrey">Decription:</label>&nbsp;&nbsp;
                @Html.DisplayFor(ModelItem => item.Description)
                <br />
                <lable style="color:dimgrey">CTC:</lable>&nbsp;&nbsp;&nbsp;&nbsp;
                @Html.DisplayFor(ModelItem => item.CTCFrom)-@Html.DisplayFor(ModelItem => item.CTCTo)
                <br/>
            </td>
            
        </tr>



    </tbody>
            }
        
    </table>

